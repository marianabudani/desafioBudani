<h1>New User</h1>
<section id="registerForm">
    <div>
        <form action="/api/users" method="post">
            <input type="text" placeholder="Name" name="firstName" class="formInput">
            <br/>
            <input type="text" placeholder="Last Name" name="lastName" class="formInput">
            <br/>
            <input type="email" placeholder="E-mail" name="email" class="formInput">
            <br/>
            <input type="password" placeholder="Password" name="password" class="formInput">
            <br/>
            <input type="number" placeholder="Age" name="age" class="formInput">
            <br/>
            <input type="text" placeholder="Profile picture" name="img" class="formInput">        
            <br/>
            <br/>
            <button type="submit" class="formBtn">register</button>
        </form>
    </div>
</section>